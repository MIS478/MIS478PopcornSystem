<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mis478.popcornapp.ScoutMainPage"
    android:id="@+id/hello">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome Scout"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals"
        android:id="@+id/GoalBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="Goal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales Mode"
        android:id="@+id/SalesModeBtn"
        android:layout_marginTop="293dp"
        android:onClick="Sales" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donations"
        android:id="@+id/DonateBtn"
        android:layout_alignTop="@+id/SalesModeBtn"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:onClick="Donation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Products"
        android:id="@+id/ViewProductsBtn"
        android:layout_alignBottom="@+id/DonateBtn"
        android:layout_toRightOf="@+id/textView"
        android:layout_toLeftOf="@+id/GoalBtn"
        android:layout_toStartOf="@+id/GoalBtn"
        android:onClick="View" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Mode"
        android:id="@+id/DeliverBtn"
        android:layout_below="@+id/SalesModeBtn"
        android:layout_alignLeft="@+id/SalesModeBtn"
        android:layout_alignStart="@+id/SalesModeBtn"
        android:layout_marginTop="55dp"
        android:onClick="Delivery" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/StatusBtn"
        android:layout_alignTop="@+id/DeliverBtn"
        android:layout_centerHorizontal="true"
        android:onClick="Status" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past Sales"
        android:id="@+id/PastBtn"
        android:layout_alignTop="@+id/StatusBtn"
        android:layout_alignRight="@+id/ViewProductsBtn"
        android:layout_alignEnd="@+id/ViewProductsBtn"
        android:onClick="Past" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/LogoutBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Log" />
</RelativeLayout>
