<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mis478.popcornapp.AddScout"
    android:background="@color/BGColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:weightSum="1">


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ScoutNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scout Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:paddingLeft="15dp" />

                <EditText
                    android:id="@+id/Scout_number"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/TextColor"
                    android:nextFocusDown="@+id/user_name"
                    android:nextFocusRight="@id/user_name"
                    android:layout_column="2" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/UserNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:paddingLeft="15dp" />

                <EditText
                    android:id="@+id/user_name"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/TextColor"
                    android:nextFocusDown="@+id/fname"
                    android:nextFocusRight="@id/fname"
                    android:layout_column="2" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fnamelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:paddingLeft="15dp" />

                <EditText
                    android:id="@+id/fname"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/TextColor"
                    android:nextFocusDown="@+id/lname"
                    android:nextFocusRight="@id/lname"
                    android:layout_column="2" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lnamelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:paddingLeft="15dp" />

                <EditText
                    android:id="@+id/lname"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="@color/TextColor"
                    android:nextFocusDown="@+id/sales_goal"
                    android:nextFocusRight="@id/sales_goal"
                    android:layout_column="2" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/salesgoallabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales Goal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:paddingLeft="15dp" />

                <EditText
                    android:id="@+id/sales_goal"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="@color/TextColor"
                    android:nextFocusDown="@+id/price_progress"
                    android:nextFocusRight="@id/price_progress"
                    android:layout_column="2" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/priceprogresslabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Progress"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:paddingLeft="15dp" />

                <EditText
                    android:id="@+id/price_progress"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="@color/TextColor"
                    android:nextFocusDown="@+id/pass"
                    android:nextFocusRight="@id/pass"
                    android:layout_column="2" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:text="Den Number"
                    android:paddingLeft="15dp"
                    android:id="@+id/dennumberlabel"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:ems="10"
                    android:id="@+id/den_number"
                    android:textColor="@color/TextColor"
                    android:nextFocusDown="@+id/pass"
                    android:nextFocusRight="@id/pass"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_column="2" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/passlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Pass"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:paddingLeft="15dp" />

                <EditText
                    android:id="@+id/pass"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone"
                    android:textColor="@color/TextColor"
                    android:nextFocusDown="@+id/total_sales"
                    android:nextFocusRight="@id/total_sales"
                    android:layout_column="2" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/totalsaleslabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Total Sales"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:paddingLeft="15dp" />

                <EditText
                    android:id="@+id/total_sales"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/TextColor"
                    android:nextFocusDown="@+id/NextButton"
                    android:nextFocusRight="@id/NextButton"
                    android:layout_column="2" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Goal"
                    android:id="@+id/personalgoallabel"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor"
                    android:paddingLeft="15dp"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/personal_goal"
                    android:layout_column="2" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/DenGoalLabel">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="   Den Goal"
                    android:id="@+id/dengoallabel"
                    android:textColor="@color/TextColor"
                    android:paddingLeft = "15dp"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/den_goal"
                    android:layout_column="2" />
            </TableRow>

        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10.18">

            <Button
                android:id="@+id/BackButton"
                style="@style/ButtonCubScoutTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:clickable="true"
                android:text="@string/back"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="ToProducts"/>

            <Button
                android:id="@+id/NextButton"
                style="@style/ButtonCubScoutTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:clickable="true"
                android:text="@string/next"
                android:onClick="ToFinalize"/>
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
