<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGColor"
    android:fillViewport="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mis478.popcornapp.AddScout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:weightSum="1">


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ScoutNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Scout Number"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/Scout_number"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number|textNoSuggestions"
                    android:maxLength="6"
                    android:nextFocusDown="@+id/user_name"
                    android:nextFocusRight="@id/user_name"
                    android:textColor="@color/TextColor" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/UserNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="User Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/user_name"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textNoSuggestions"
                    android:maxLength="7"
                    android:nextFocusDown="@+id/fname"
                    android:nextFocusRight="@id/fname"
                    android:textColor="@color/TextColor" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fnamelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="First Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/fname"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:ems="10"
                    android:inputType="textNoSuggestions|textCapSentences|textPersonName"
                    android:nextFocusDown="@+id/lname"
                    android:nextFocusRight="@id/lname"
                    android:textColor="@color/TextColor" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lnamelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Last Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/lname"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textNoSuggestions|textCapSentences|textPersonName"
                    android:nextFocusDown="@+id/sales_goal"
                    android:nextFocusRight="@id/sales_goal"
                    android:textColor="@color/TextColor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/salesgoallabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Sales Goal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/sales_goal"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:nextFocusDown="@+id/prize_progress"
                    android:nextFocusRight="@id/prize_progress"
                    android:textColor="@color/TextColor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/priceprogresslabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Prize Progress"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/prize_progress"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:nextFocusDown="@+id/den_number"
                    android:nextFocusRight="@id/den_number"
                    android:textColor="@color/TextColor" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/dennumberlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:paddingLeft="15dp"
                    android:text="Den Number"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/den_number"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="3"
                    android:nextFocusDown="@+id/pass"
                    android:nextFocusRight="@id/pass"
                    android:textColor="@color/TextColor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/passlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:paddingLeft="15dp"
                    android:text="Pass"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/pass"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:ems="10"
                    android:inputType="textNoSuggestions|textPassword"
                    android:maxLength="3"
                    android:nextFocusDown="@+id/total_sales"
                    android:nextFocusRight="@id/total_sales"
                    android:textColor="@color/TextColor" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/totalsaleslabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:paddingLeft="15dp"
                    android:text="Total Sales"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/total_sales"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:ems="10"
                    android:inputType="number"
                    android:nextFocusDown="@+id/NextButton"
                    android:nextFocusRight="@id/NextButton"
                    android:textColor="@color/TextColor" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/personalgoallabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:paddingLeft="15dp"
                    android:text="Personal Goal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/personal_goal"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:ems="10"
                    android:inputType="number" />
            </TableRow>

            <TableRow
                android:id="@+id/DenGoalLabel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/dengoallabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:paddingLeft="15dp"
                    android:text="Den Goal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TextColor" />

                <EditText
                    android:id="@+id/den_goal"
                    style="@style/EditTextCubScoutTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:ems="10"
                    android:inputType="number" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/BackButton"
                style="@style/ButtonCubScoutTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:onClick="back"
                android:text="@string/back" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8" />

            <Button
                android:id="@+id/NextButton"
                style="@style/ButtonCubScoutTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:onClick="AddScout"
                android:text="@string/next" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
